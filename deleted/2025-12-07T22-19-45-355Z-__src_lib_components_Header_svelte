<script>
  import { onMount } from 'svelte';

  let isScrolled = false;

  onMount(() => {
    const handleScroll = () => {
      isScrolled = window.scrollY > 10;
    };
    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  });
</script>

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 px-6 py-4 flex items-center justify-between {isScrolled ? 'bg-[#F9F8F6]/90 backdrop-blur-md' : 'bg-transparent'}">
  <div class="flex items-center">
    <!-- Logo -->
    <a href="/" class="text-2xl font-bold tracking-tight flex items-center gap-1">
      <div class="relative w-6 h-6 flex items-center justify-center">
        <!-- Abstract logo shape simulation -->
        <div class="absolute w-full h-[2px] bg-black rotate-45"></div>
        <div class="absolute w-full h-[2px] bg-black -rotate-45"></div>
        <div class="absolute w-[2px] h-full bg-black"></div>
        <div class="absolute w-full h-[2px] bg-black"></div>
      </div>
      <span class="ml-2 font-semibold text-xl tracking-widest">HOLO</span>
    </a>
  </div>

  <div class="flex items-center gap-8">
    <nav class="hidden md:flex items-center gap-8 text-sm font-medium text-gray-800">
      <a href="#biomarkers" class="hover:text-black transition-colors">Biomarkers</a>
      <a href="#faq" class="hover:text-black transition-colors">FAQ</a>
    </nav>
    <a href="#join" class="bg-[#1A1A1A] text-white text-xs font-medium px-5 py-2.5 rounded-sm hover:bg-black transition-colors">
      Join now
    </a>
  </div>
</header>